<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#99aaaaaa">

    <EditText
        android:id="@+id/txtTo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="0sp"
        android:text="@string/daanneek_gmail_com" />

    <EditText
        android:id="@+id/txtSubject"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="0sp"
        android:hint="@string/subjectactual" />

    <EditText
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:hint="@string/questionactual"
        />
        <Button
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:text="@string/send"
            android:scaleType="fitCenter"
            android:layout_margin="20dp"
            android:onClick="composeEmail" />
    </LinearLayout>



    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/maps"
        android:onClick="GoToMaps"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#99aaaaaa"
        android:layout_margin="20dp"
        android:text="@string/informatie"/>


</LinearLayout>